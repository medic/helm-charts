{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["networking.gke.io/v1"]
    },
    "kind": {
      "type": "string",
      "enum": ["ManagedCertificate"]
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["domains"],
      "properties": {
        "domains": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
